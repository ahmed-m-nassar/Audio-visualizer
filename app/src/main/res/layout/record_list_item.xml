<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView

        android:id="@+id/RecordListItem_RecordName_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:text="Audio1"
        android:paddingTop="@dimen/space16"
        android:paddingLeft="@dimen/space16"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/RecordListItem_Duration_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:paddingLeft="@dimen/space16"
        android:layout_below="@id/RecordListItem_RecordName_TextView"/>
    <TextView
        android:id="@+id/RecordListItem_Date_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/RecordListItem_RecordName_TextView"
        android:text="1/1/1999"
        android:paddingRight="@dimen/space16"
        ></TextView>
</RelativeLayout>