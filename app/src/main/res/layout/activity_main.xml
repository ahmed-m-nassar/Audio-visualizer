<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        tools:context=".RecordMain.RecordActivity">
        <ImageView
            android:id="@+id/Record_Mic_ImageView"
            android:layout_marginTop="@dimen/space8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mic_off"/>

        <TextView
            android:id="@+id/Record_RecordName_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Record1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/silver" />
        <Chronometer
            android:id="@+id/Record_Timer_Chronometer"
            android:paddingTop="@dimen/space8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:gravity="center_horizontal"/>



        <ImageButton
            android:id="@+id/Record_AddPicture_ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_add_a_photo"
            android:background="@color/white"
            android:layout_marginTop="30dp"/>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="30dp"
            android:padding="@dimen/space16"
            android:weightSum="3">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/Record_Cancel_ImageButton"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_cancel"
                app:civ_border_width="1dp"
                app:civ_border_color="#000000"/>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/Record_RecordsList_ImageButton"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_list2"
                android:visibility="gone"
                app:civ_border_width="1dp"
                app:civ_border_color="#000000"/>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/Record_StartRecord_ImageButton"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_fiber_manual_record_black_24dp"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/whitish"/>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/Record_PauseRecord_ImageButton"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_pause"
                android:visibility="gone"
                app:civ_border_width="1dp"
                app:civ_border_color="#000000"/>

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/Record_Stop_ImageButton"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_stop"
                app:civ_border_width="1dp"
                app:civ_border_color="#000000"/>




        </LinearLayout>

    </LinearLayout>

</ScrollView>
